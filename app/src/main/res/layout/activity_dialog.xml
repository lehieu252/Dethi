<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:background="#202020"
    tools:context=".DialogActivity">

    <TextView
        android:id="@+id/txt_thong_tin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Thông tin chi tiết"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txt_thong_tin"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/txt_ma_nv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_margin="5dp"
        android:text="Mã nhân viên:"
        android:textColor="@android:color/secondary_text_dark" />

    <EditText
        android:id="@+id/edt_ma_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_alignBaseline="@+id/txt_ma_nv"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/txt_ma_nv" />

    <TextView
        android:id="@+id/txt_ten_nv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ma_nv"
        android:layout_margin="5dp"
        android:text="Tên nhân viên:"
        android:textColor="@android:color/secondary_text_dark" />

    <EditText
        android:id="@+id/edt_ten_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_ten_nv"

        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/txt_ten_nv" />

    <TextView
        android:id="@+id/txt_tuoi_nv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ten_nv"
        android:layout_margin="5dp"
        android:text="Tuổi nhân viên:"
        android:textColor="@android:color/secondary_text_dark" />

    <EditText
        android:id="@+id/edt_tuoi_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_tuoi_nv"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@+id/txt_tuoi_nv" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/edt_tuoi_nv"
        android:layout_alignStart="@+id/edt_tuoi_nv"
        android:layout_marginTop="5dp"
        android:background="#404040"
        android:padding="10dp"
        android:text="Xóa nhân viên"
        android:layout_marginBottom="5dp"
        android:textAllCaps="false"
        android:textColor="@android:color/secondary_text_dark" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/edt_tuoi_nv"
        android:layout_alignEnd="@+id/edt_tuoi_nv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/btn_delete"
        android:background="#404040"
        android:padding="10dp"
        android:text="Trở về"
        android:textAllCaps="false"
        android:textColor="@android:color/secondary_text_dark" />

</RelativeLayout>